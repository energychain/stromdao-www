{
  "name": "spike-projekt-template",
  "description": "just a template for a simple Spike project",
  "version": "0.0.1",
  "author": "energychain",
  "ava": {
    "verbose": "true"
  },
  "bugs": "https://github.com/energychain/spike-projekt-template/issues",
  "dependencies": {
    "reshape-standard": "^3.1.1",
    "spike": "^2.2.0",
    "spike-css-standards": "^3.0.0",
    "spike-js-standards": "^2.0.2",
    "spike-optimize": "^0.1.2",
    "spike-page-id": "^1.0.0"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "nyc": "^11.1.0",
    "prettier-standard": "^6.0.0",
    "rimraf": "^2.6.1",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3"
  },
  "homepage": "https://github.com/energychain/spike-projekt-template",
  "main": "app.js",
  "private": false,
  "repository": "https://github.com/energychain/spike-projekt-template",
  "scripts": {
    "format": "prettier-standard '**/*.js'",
    "lint": "standard | snazzy",
    "precommit": "npm run lint -s",
    "pretest": "npm run lint -s",
    "test": "NODE_ENV=test nyc ava",
    "start": "spike watch",
    "build": "spike compile",
    "prod": "NODE_ENV=production spike compile -e production"
  },
  "optionalDependencies": {
    "husky": "^0.14.3"
  }
}
